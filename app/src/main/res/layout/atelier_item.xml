<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    >


    <RelativeLayout
        android:layout_width="383dp"
        android:layout_height="220dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"

        android:padding="15dp"


        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img6"
            android:layout_width="90dp"
            android:layout_height="90dp"


            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#0B154C"
            app:civ_border_width="2dp" />


        <TextView
            android:id="@+id/nomAat_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img6"
            android:text="Nom Ateliers"
            android:textColor="#061A88"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nomChefAt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomAat_txt"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img6"
            android:text="Nom Chef Atelier"
            android:textColor="#061A88"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nbEqAt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomChefAt_txt"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img6"
            android:text="Nombre des equipes"
            android:textColor="#061A88"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nbMachineAt_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nbEqAt_txt"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/img6"
            android:text="nombre des machines"
            android:textColor="#061A88"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nbMachineAt_txt"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editBtnAt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/button_selector"
                android:text="Modifier"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/deleteBtnAt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/button_selector"
                android:text="Supprimer"
                android:textAllCaps="false" />


        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>