<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"


            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#0B154C"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nom utilisateur"
            android:textColor="#0B154C"
            android:textSize="25sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/statut_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_txt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="statut de l'utilisateur"
            android:textColor="#061A88"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statut_txt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="email id"
            android:textColor="#061A88"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_below="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <Button
                android:layout_marginTop="12dp"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Modifier"
                android:layout_marginRight="7dp"
                android:id="@+id/editBtn"/>

            <Button
                android:layout_marginTop="12dp"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="Supprimer"
                android:layout_marginLeft="5dp"
                android:id="@+id/deleteBtn"/>





        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>