<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    app:contentPadding="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"


            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#0B154C"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nom utilisateur"
            android:textColor="#0B154C"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nomAtelierUt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_txt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nom atelier"
            android:textColor="#061A88"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nomChefUt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomAtelierUt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Nom Chef Ã©quipe"
            android:textColor="#061A88"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cinUt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/nomChefUt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Cin"
            android:textColor="#061A88"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/statut_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cinUt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="statut de l'utilisateur"
            android:textColor="#061A88"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/phoneNumUt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statut_txt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="Phone number"
            android:textColor="#061A88"
            android:textSize="18sp" />




        <TextView
            android:id="@+id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/statut_txt"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img1"
            android:text="email id"
            android:textColor="#061A88"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_txt"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/rounded"
                android:outlineAmbientShadowColor="@color/home_background"
                android:shadowColor="@color/white"
                android:text="Modifier"

                android:textAllCaps="false"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded"
                android:outlineAmbientShadowColor="@color/home_background"
                android:text="Supprimer"
                android:textAllCaps="false" />


        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>