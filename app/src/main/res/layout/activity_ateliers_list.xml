<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AteliersList"
    android:layout_marginRight="5dp"
    android:paddingLeft="20dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/arrowBtnnAt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/white"
                android:src="@drawable/arrow"
                android:layout_marginTop="10dp"

                />




        </LinearLayout>


    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Liste des Ateliers existantes "

            android:textStyle="bold"
            android:fontFamily="@font/anton"
            android:letterSpacing="0.1"

            android:layout_marginLeft="22dp"

            android:textColor="#0B154C"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/search_filed_a"
            android:layout_width="262dp"
            android:layout_height="35dp"


            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_layout"
            android:ems="10"
            android:fontFamily="@font/nunito_sans_bold"
            android:hint="Rechercher"


            android:inputType="text"
            android:paddingLeft="30dp"
            android:textColor="#999999"
            android:textSize="16sp"
            android:typeface="normal" />

        <ImageButton
            android:id="@+id/search_btn_m"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            android:layout_marginLeft="260dp"
            android:layout_marginTop="-30dp"
            android:background="@color/white"
            android:src="@drawable/search_mini" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_filed_m"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/rdgrp_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="35dp"
                >
                <RadioButton
                    android:id="@+id/rdatelier_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atelier"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text_color"
                    android:elevation="4dp"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"

                    android:padding="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"/>


                <RadioButton
                    android:id="@+id/rdDate_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/radio_selector"
                    android:button="@color/transparent"
                    android:elevation="4dp"
                    android:padding="15dp"
                    android:text="Date"
                    android:textColor="@drawable/radio_text_color"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rdtxt_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="3dp"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text_color"
                    android:elevation="4dp"
                    android:textSize="12sp"
                    android:padding="15dp"/>

                <RadioButton
                    android:id="@+id/rdWarning_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="3dp"
                    android:button="@color/transparent"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/radio_text_color"
                    android:elevation="4dp"
                    android:textSize="12sp"
                    android:padding="15dp"/>
            </RadioGroup>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="790dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/atelier_rcv"
                    android:layout_width="379dp"
                    android:layout_height="569dp"
                    android:layout_marginTop="30dp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </ScrollView>
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButtonAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#E0E9FA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.892"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.941"
        app:srcCompat="@drawable/add" />
</androidx.constraintlayout.widget.ConstraintLayout>